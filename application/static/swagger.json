{
  "swagger": "2.0",
  "info": {
    "description": "The component is based in the keywords extraction process used in the OpenReq project called similar-related-requirements-recommender (https://github.com/OpenReqEU/similar-related-requirements-recommender). The main purpose of this service is to preprocess requirements and to obtain the keywords that represent each one.",
    "version": "1.0.0",
    "title": "Keywords Extraction"
  },
  "host": "217.172.12.199:9406",
  "basePath": "/keywords-extraction",
  "schemes": [
    "http"
  ],
  "paths": {
    "/requirements": {
      "post": {
        "summary": "Preprocesses and extracts the keywords of the input requirements.",
        "description": "Preprocesses and extracts the keywords of the input requirements. The title keywords are returned in the 'title_tokens' field and the description tokens in the 'description_tokens' field of the JSON.",
        "tags": [
          "Main operations"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "stemmer",
            "in": "query",
            "type": "boolean",
            "description": "Whether to use stemming or not"
          },
          {
            "in": "body",
            "name": "bodya",
            "description": "Input requirements",
            "required": true,
            "schema": {
              "type": "object",
              "$ref": "#/definitions/Requirements"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "ok",
            "schema": {
              "type": "object",
              "properties": {
                "requirements": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/PreprocessedRequirements"
                  }
                }
              }
            }
          },
          "405": {
            "description": "Invalid input",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Invalid Input"
                },
                "message": {
                  "type": "string",
                  "example": "The requirements array is empty"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Requirements": {
      "type": "object",
      "properties": {
        "requirements": {
          "type": "array",
          "items": {
            "properties": {
              "id": {
                "type": "string",
                "example": "UPC-1"
              },
              "title": {
                "type": "string",
                "example": "The swagger version is deprecated."
              },
              "description": {
                "type": "string",
                "example": "There is a new version available."
              }
            }
          }
        }
      }
    },
    "PreprocessedRequirements": {
      "type": "object",
      "properties": {
        "requirements": {
          "type": "array",
          "items": {
            "properties": {
              "id": {
                "type": "string",
                "example": "UPC-1"
              },
              "title_tokens": {
                "type": "array",
                "items": {
                  "type": "string",
                  "example": "swagger"
                }
              },
              "description_tokens": {
                "type": "array",
                "items": {
                  "type": "string",
                  "example": "avail"
                }
              }
            }
          }
        }
      }
    }
  }
}
